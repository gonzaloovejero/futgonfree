.table-channels-container {
    width: 60%;
    height: 700px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: black;
    border-radius: 20px;
    box-shadow:0px 0px 40px 10px rgba(204, 206, 207, 0.377);

    .flex-center {
        width: 90%;
        height: 80%;
        display: flex;
        justify-content: center;
        align-items: center;

        .list-channels {
            width: 100%;
            display: flex;
            flex-direction: column;
            gap: 10px;
            list-style: none;

            :hover {
                cursor: pointer;
            }

            span {
                font-size: 14px;
                font-weight: 500;
                color: rgb(252, 249, 249);
            }

            .main-items {
                border: 1px solid rgb(209, 209, 209);
                padding: 5px;
                width: 100%;

                .item {
                    padding: 5px;
                    box-shadow: 0px 1px 20px -8px rgb(0, 0, 0);
                }
            }

            :hover {
                background-color: rgba(78, 78, 78, 0.726);

                span {
                    background: none;
                }
            }
        }

        .video-popup {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.836);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;

            :hover {
                cursor: pointer;
            }
        }

        .video-popup-content {
            padding: 20px;
            width: 1000px;
            height: 700px;
            overflow: auto;
            position: relative;

            :hover {
                color: rgb(255, 0, 0);
                cursor: pointer;
            }
        }

        .close-button {
            position: absolute;
            right: 30px;
            top: 25px;
            color: white;
        }
    }
}