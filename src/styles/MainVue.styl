.main-vue-container {
    width: 100%;
    height: 100vh;
    background: #F5F5F5;

    .explain {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: -40px;

        .centralize-explain {
            width: 60%;

            span {
                font-size: 13px;
            }
        }
    }

    .table-channels {
        width: 100%;
        height: 90%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .donations {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: -50px;
        gap: 10px;

        img {
            height: 50px;
            width: 80px;
        }

        h1 {
            font-size: 18px;
        }

        span {
            font-size: 18px;
        }
    }
}