.navbar-container {
    width: 100%;
    height: 60px;
    background: #020740b4;
    box-shadow: 0px 0px 10px 1px white;
    display: flex;

    .logo-container {
        height: 100%;
        width: 100px;
        display: flex;
        align-items: center;
        margin-left: 50px;
        gap: 10px;

        img {
            width: 60px;
            height: 50px;
        }

        h1 {
            font-size: 30px;
        }

        a {
            text-decoration: none;
            color: white;
        }

        a:hover {
            color: rgb(148, 148, 148);
        }
    }

    .links-container {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: flex-end;
        align-items: center;

        .flex-list {
            float: right;
            display: flex;
            padding-right: 30px;
            list-style: none;
            gap: 20px;
            font-size: 15px;
            letter-spacing: 0.04em;

            a {
                text-decoration: none;
                color: white;
            }

            :hover {
                color: rgb(148, 148, 148);
            }
        }
    }
}